{{!-- If an error didn't happen display the regular page --}}
{{#unless error}}
<style>
  .lan-overview {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }

  .card {
    background-color: var(--card-background);
    -webkit-box-shadow: var(--shadow-basic); 
    box-shadow: var(--shadow-basic);
    padding: 0 0 32px 0;
    border-radius: 10px;
    margin-bottom: 32px;
    width: min(600px, 100%);
  }

  .card > .head {
    padding: 32px 32px 16px 32px;
    margin-bottom: 24px;
    border-bottom: 1px solid var(--background-400);
  }
</style>

<div class="lan-overview">

{{!-- If there are lans display them --}}
{{#if lans}}



{{else}}
{{!-- If there are no lans then say that --}}

<h2>Der er ingen LAN</h2>

{{/if}}
</div>

{{!-- If an error happened --}}
{{else}}
<style>
  .error {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
  }

  .error>span {
    background-color: var(--warn-400);
    margin-top: 64px;
    padding: 12px 32px;
    width: min(100%, fit-content);
    height: fit-content;
    color: var(--warn-contrast-400);
    border-radius: 5px;
    text-align: center;
  }
</style>

<div class="error">
  <span>{{ error }}</span>
</div>
{{/unless}}