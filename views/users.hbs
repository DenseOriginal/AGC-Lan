<style>
  .card {
    background-color: var(--card-background);
    -webkit-box-shadow: var(--shadow-basic);
    box-shadow: var(--shadow-basic);
    padding: 32px;
    border-radius: 10px;
    margin: 32px 0;
  }

  .container {
    overflow-x: auto;
  }

  .container>table {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 700px;
    border-radius: 10px;
  }

  .container>table td,
  .container>table th {
    border: 1px solid var(--background-300);
    padding: 8px;
  }

  .container>table td.goto a,
  .container>table th a {
    color: var(--primary-text);
    text-decoration: none;
  }

  .container>table tr:nth-child(odd) {
    background-color: var(--background-200);
  }

  .container>table th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #04AA6D;
    color: white;
  }
</style>

<h1>Alle brugere</h1>

<div class="card">
  <div class="container">
    <table id="user-table">
      <tr>
        <th></th>
        <th><a href="?sort=first_name">Fornavn</a></th>
        <th><a href="?sort=last_name">Efternavn</a></th>
        <th><a href="?sort=username">Brugernavn</a></th>
        <th><a href="?sort=email">Email</a></th>
        <th><a href="?sort=class">Klasse</a></th>
      </tr>
      {{#each users}}
      <tr>

        <td class="goto">
          <a href="/user/{{ this._id }}"><i class="fas fa-external-link-alt"></i></a>
        </td>

        <td>{{ this.first_name }}</td>
        <td>{{ this.last_name }}</td>
        <td>{{ this.username }}</td>
        <td>{{ this.email }}</td>
        <td>{{ this.class }}</td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>